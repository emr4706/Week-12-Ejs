

<%- include("header") -%>

<div class="box" id="boxDate">
    <h3><%= kindOfDay %></h3>
</div>

<div class="box" id="heading">

    <h1>To Do List</h1>   

</div>

<div class="box">

    <% for(var i=0; i<todos.length; i++){ %>

    <div class="item">
       <input class="deleteItem" type="checkbox">
       <p><%= todos[i] %></p>
    </div>

    <% } %>

    <form class="item" action="/" method="POST">
        <input type="text" name="newTodo" placeholder="New To Do" autocomplete="off">
        <button type="submit" name="button">+</button>
    </form>

</div>

<script>

$(".deleteItem").click(function (e) { 
    e.preventDefault();
    $(this).closest(".item").remove(); 
});

</script>

<%- include("footer") -%>


